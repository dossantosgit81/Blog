<%- include ("../../partils/header.ejs") %> 
<%- include ("../../partils/navbar.ejs") %>

<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a class="btn btn-success" href="/admin/categories/new">Criar Nova Categoria</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %> 
                <tr>
                   <td> <%= category.id %>  </td> 
                   <td> <%= category.title %> </td>
                   <td> <%= category.slug %>  </td>
                   <td>
                        <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a href="/admin/categories">
                   <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDelecao(event, this)">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                   </td>
                </tr>
            <% }) %> 
        </tbody>
    </table>
</div>

<%- include ("../../partils/footer.ejs") %> 

<script>

function confirmDelecao(event, form){
    event.preventDefault();
    var decision = confirm("Você quer deletar esta categoria?");
    if(decision){
        form.submit();
    }

}

</script>